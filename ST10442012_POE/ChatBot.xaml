<Window x:Class="ST10442012_POE.ChatBot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chatbot" Height="600" Width="400" WindowStartupLocation="CenterScreen" Background="White" ResizeMode="NoResize">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Chat messages list -->
            <RowDefinition Height="Auto"/>
            <!-- Input area -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom nav bar -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Chatbot" FontWeight="Bold" FontSize="24" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Chat Messages List -->
        <ListBox x:Name="ChatMessagesList" Grid.Row="1" 
                 Background="White" BorderThickness="0" 
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Margin="0,10,0,10" >

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding BackgroundColor}" 
                            CornerRadius="10" Padding="10" Margin="5" MaxWidth="250" HorizontalAlignment="{Binding Alignment}">
                        <StackPanel>
                            <TextBlock Text="{Binding Sender}" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Foreground="{Binding ForegroundColor}" FontSize="14"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Input Area -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBox x:Name="UserInputTextBox" Width="260" Height="32" FontSize="14" VerticalContentAlignment="Center" />
            <Button Content="Send" Width="60" Height="32" Margin="8,0,0,0" Click="SendButton_Click"/>
        </StackPanel>

        <!-- Bottom Navigation Bar -->
        <DockPanel Grid.Row="3" Height="56" Background="White" LastChildFill="False" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" >
                <Button Width="60" Background="Transparent" BorderThickness="0" Click="HomeButton_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="home.png" Width="24" Height="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Home" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="60" Background="Transparent" BorderThickness="0" Click="ChatBotButton_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="chatbot.png" Width="24" Height="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Chatbot" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="60" Background="Transparent" BorderThickness="0" Click="TasksButton_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="tasks.png" Width="24" Height="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Tasks" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="60" Background="Transparent" BorderThickness="0" Click="QuizButton_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="quiz.png" Width="24" Height="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Quiz" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="60" Background="Transparent" BorderThickness="0" Click="ActivityLogButton_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="activitylog.png" Width="24" Height="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Activity Log" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

    </Grid>

</Window>
